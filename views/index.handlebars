<h1 class="maintitle">Eat-Da-Burger!</h1>

<div class="row">
  <div class="col-lg-4">
    <div class="leftcol">
      <h2>Burgers Ordered:</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="col-lg-4 centcol">
    <div class="img centcol"><img src="/assets/img/cheeseburger.jpg" alt="cheeseburger" /></div>
    <br><br>
    <h2>Order a Burger!</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="burger_name">
      </div>

      <div class="form-group">
        <label for="dev"></label>
        <input type="hidden" name="devoured" value="0">
      </div>

      <button type="submit">Place Order</button>
    </form>
  </div>
  <div class="col-lg-4">
    <div class="rightcol">
      <h2>Burgers Eaten:</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>